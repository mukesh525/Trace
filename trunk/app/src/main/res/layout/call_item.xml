<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"
    card_view:cardBackgroundColor="#EEEEEE"
    card_view:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="10dp">

                <TextView
                    android:id="@+id/fCallFromLabel"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Call From"
                    android:textColor="@color/background_floating_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fCallFromTextView"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fCallFromLabel"
                    android:layout_alignStart="@+id/fCallFromLabel"
                    android:layout_below="@+id/fCallFromLabel"
                    android:text="Not Available"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/fCallerNameLabel"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fCallFromTextView"
                    android:layout_marginTop="5dp"
                    android:text="Name"
                    android:textColor="@color/background_floating_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fCallerNameTextView"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fCallerNameLabel"
                    android:layout_toLeftOf="@+id/ivplay"
                    android:text="Not Available"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/fGroupNameLabel"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fCallerNameTextView"
                    android:layout_marginTop="5dp"
                    android:text="Employee"
                    android:textColor="@color/background_floating_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fGroupNameTextView"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/fGroupNameLabel"
                    android:text="Not Available"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/fDateLabel"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/fCallFromLabel"
                    android:text="Date"
                    android:textColor="@color/background_floating_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fDateTextView"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fDateLabel"
                    android:text="Not Available"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/fTimeLabel"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/fCallerNameLabel"
                    android:text="Time"
                    android:textColor="@color/background_floating_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fTimeTextView"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fTimeLabel"
                    android:layout_toRightOf="@+id/ivplay"
                    android:gravity="end"
                    android:text="Not Available"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/fStatusLabel"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/fTimeTextView"
                    android:layout_alignRight="@+id/fTimeTextView"
                    android:layout_alignTop="@+id/fGroupNameLabel"
                    android:layout_below="@+id/fTimeTextView"
                    android:text="Status"
                    android:textColor="@color/background_floating_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fStatusTextView"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fStatusLabel"
                    android:text="Not Available"
                    android:textColor="?attr/colorPrimary" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/df"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/fCallerNameTextView"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.5"
                    android:background="@drawable/def_img"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivplay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/fDateTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_play" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/overflowmenu"
                android:layout_width="35.0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ic_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/ic_overflow" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/rate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ic_rate"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/fStatusTextView"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_home"
                android:visibility="gone"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>