<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backporttr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vmc.in.mrecorder.activity.Feedback"
    tools:showIn="@layout/activity_feedback">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:text="What new feature would you like to see in this app?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etfeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:gravity="center"
        android:hint="FeedBack Message"
        android:inputType="textMultiLine">
    </EditText>

    <Button
        android:id="@+id/button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etfeedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="?attr/colorPrimary"
        android:padding="10dp"
        android:text="Submit"
        android:textColor="#FFF" />


</RelativeLayout>
