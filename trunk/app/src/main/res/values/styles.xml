<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Bluetheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="redtheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#795548</item>
        <item name="android:textColorPrimary">@color/deeppurple_primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="greentheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/deeppurple_primary_text</item>
    </style>

    <style name="deeppurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/deeppurple_primary</item>
        <item name="colorPrimaryDark">@color/deeppurple_primary_dark</item>
        <item name="colorAccent">@color/deeppurple_accent</item>
        <item name="android:textColorPrimary">@color/deeppurple_primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="indigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/indigo_primary</item>
        <item name="colorPrimaryDark">@color/indigo_primary_dark</item>
        <item name="colorAccent">@color/indigo_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/deeppurple_primary_text</item>
    </style>


    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.FixedSize" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionBarSize">28dip</item>
        <item name="android:actionBarSize">28dip</item>
    </style>


    <style name="myBackgroundStyle" parent="@android:style/Theme.Dialog">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="navigationviewstyle">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:listPreferredItemHeightSmall">0dp</item>-->

    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorPrimaryDark</item>
        <item name="android:textColorTertiary">?android:textColorPrimary</item>
        <item name="android:textColorLink">?colorAccent</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
